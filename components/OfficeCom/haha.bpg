MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = okword.exe client.exe MailAgent.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

okword.exe: okword.dpr
  $(DCC)

client.exe: client.dpr
  $(DCC)

MailAgent.exe: MailAgent.dpr
  $(DCC)


